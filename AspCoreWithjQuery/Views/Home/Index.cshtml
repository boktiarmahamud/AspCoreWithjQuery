@{
    ViewData["Title"] = "Home Page";
}


<div class="container">
    <div class="row">
        <div class="col-md-6">
            
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Number</label>
                <input type="text" class="form-control" id="name" placeholder="Enter Number">
            </div>
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Number</label>
                <input type="text" class="form-control" id="secondName" placeholder="Enter Number">
            </div>
            <br/>
            <button class="btn btn-info" onclick="Addion()">ADD</button>
            <button class="btn btn-info" onclick="Subtraction()">Subtracion</button>
            <button class="btn btn-info" onclick="Multiplication()">Multiplicaion</button>
            <button class="btn btn-info" onclick="Division()">Division</button>
            <button class="btn btn-info" onclick="calculation()">calculation</button>

            <br />

            <h3 id="result"></h3>           
        </div>
	</div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script type = "text/javascript">
