         function Addion() {
              var n1 = $("#name").val();
              var n2 = $("#secondName").val();

              $.ajax({
                  type: 'POST',                      // changed to POST to match controller
                  url: '@Url.Action("Add", "Home")',  // explicitly include controller
                  data: { num1: n1, num2: n2 },
                  dataType: 'json',                  // expect JSON (controller returns a number)
                  success: function (response) {
                      $("#result").text("result is: " + response);
                  },
                  error: function (req, status, error) {
                      $("#result").text(error);
                  }
              });
          }

             function Subtraction() {
                 var n1 = $("#name").val();
                 var n2 = $("#secondName").val();

                 $.ajax({
                     type: 'POST',                      // changed to POST to match controller
                     url: '@Url.Action("Sub", "Home")',  // explicitly include controller
                     data: { num1: n1, num2: n2 },
                     dataType: 'json',                  // expect JSON (controller returns a number)
                     success: function (response) {
                            $("#result").text("result is: " + response);
                     },
                     error: function (req, status, error) {
                         $("#result").text(error);
                     }
                 });
             }

                function Multiplication() {
                    var n1 = $("#name").val();
                    var n2 = $("#secondName").val();

                    $.ajax({
                        type: 'POST',                      // changed to POST to match controller
                        url: '@Url.Action("Mul", "Home")',  // explicitly include controller
                        data: { num1: n1, num2: n2 },
                        dataType: 'json',                  // expect JSON (controller returns a number)
                        success: function (response) {
                               $("#result").text("result is: " + response);
                        },
                        error: function (req, status, error) {
                            $("#result").text(error);
                        }
                    });
                }

                   function Division() {
                       var n1 = $("#name").val();
                       var n2 = $("#secondName").val();

                       $.ajax({
                           type: 'POST',                      // changed to POST to match controller
                           url: '@Url.Action("Div", "Home")',  // explicitly include controller
                           data: { num1: n1, num2: n2 },
                           dataType: 'json',                  // expect JSON (controller returns a number)
                           success: function (response) {
                                  $("#result").text("result is: " + response);
                           },
                           error: function (req, status, error) {
                               $("#result").text(error);
                           }
                       });
                   }

                 function calculation() { 
                 var n1 = $("#name").val();
                 var n2 = $("#secondName").val();

                 $.ajax({
                     type: 'POST',                      
                     url: '@Url.Action("Calculate")',  
                     data: { num1: n1, num2: n2 },
                     dataType: 'json',                  
                     success: function (response) {
                         var data = "Addition reuslt is: " + response.add + "<br>" +
                                       "Subtraction reuslt is: " + response.subtract + "<br>" +
